{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:mocha/recommended",
        "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "MemberExpression": "off"
            }
        ],
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "no-trailing-spaces": "error",
        "no-control-regex": "off",
        "no-unused-vars": "error",
        "no-console": "error",
        "camelcase": "error"
    },
    "plugins": [
        "mocha",
        "jsdoc"
    ]
}